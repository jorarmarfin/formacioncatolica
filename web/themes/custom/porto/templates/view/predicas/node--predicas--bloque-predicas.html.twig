{% set thumbnail = node.field_image %}
{% set predicador = node.field_predicador.entity %}

<div class="col-md-4 col-xs-4">
	<span class="thumb-info thumb-info-side-image thumb-info-no-zoom">
		<span class="thumb-info-side-image-wrapper">
			<img src="{{ file_url(thumbnail.entity.uri.value|image_style('thumbnails_predica')) }}" class="img-responsive img-thumbnail" alt="" style="width: 200px;">
		</span>
		<span class="thumb-info-caption">
			<span class="thumb-info-caption-text">
				<h5 class="text-uppercase mb-xs">{{ label }}</h5>
				<p>{{predicador.title.value}}</p>
				{{node.body.summary}}
			</span>
		</span>
	</span>
</div>